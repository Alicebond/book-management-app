<!DOCTYPE html>
<html lang="en">
  <%- include ('head') %>
  <body class="wrapper">
    <%- include ('header') %>
    <%- include ('nav') %>
    <div class="main">
      <div class="book-info">
        <h1 class="title"><%= bookInfo.title %></h1>
        <p>
          <span class="op">Author:</span>
          <% if (bookAuthor) {%>
          <a href="<%= bookAuthor.url %>"><i><%= bookAuthor.name %></i></a>
          <% } %>
        </p>
        <p>
          <span class="op">ISBN:</span>
          <%= bookInfo.isbn %>
        </p>
        <p>
          <span class="op">Pages:</span>
          <%= bookInfo.pages %>
        </p>
        <p>
          <span class="op">Language:</span>
          <span><%= bookInfo.language %></span>
        </p>
        <p>
          <span class="op">Date Added:</span>
          <%= dateAdded %>
        </p>
        <p>
          <% if (bookInfo.reading) { %> 
            <span class="op">Status: </span>
            Currently reading 
          <% } else if (bookInfo.read) { %> 
              <span class="op">Status: </span> 
              <span class="check">&#10004</span> Read 
          <% } else if (bookInfo.want_to_read) {%>
              <span class="op">Status: </span>
              <span>Want to read</span>
          <% } %>
        </p>
        <p>
          <span class="op ge"> Genre:
            <% bookGenres.forEach((genre) => { %>
            <a href="<%= genre.url %>"><%=genre.name %></a> 
            <% }) %>
          </span>
        </p>
        <% if(bookInfo.description) {%>
        <div class="ds">
          <p>
            <span class="op">Description:</span>
            <span style="white-space: pre-line;"><%=bookInfo.description %></span>
          </p>
        </div>
        <% } %>
      </div>
      <br>
        <div class="btn-box">
          <p class="update">
            <a href="<%=bookInfo.url%>/update">Update Book</a>
          </p>
          <p class="delete">
            <a href="<%=bookInfo.url%>/delete">Delete Book</a>
          </p>
        </div>
      </div>
    <%- include ('footer') %>
  </body>
</html>
