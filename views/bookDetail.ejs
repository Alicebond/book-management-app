<!DOCTYPE html>
<html lang="en">
  <%- include ('head') %>
  <body>
    <%- include ('header') %>
    <div class="book-info">
      <h2><%= book.title %></h2>
      <span class="op">Author:</span> <i><%= author.name %></i><br />

      <span class="op">ISBN:</span> <%= book.isbn %><br />

      <span class="op">Pages:</span> <%= book.pages %><br />

      <span class="op">Language:</span> <%= book.language %><br />

      <span class="op"> Genre:</span>
      <% genres.forEach((genre) => { %>
      <span class="ge"><%=genre.name %> </span>
      <% }) %>
      <div class="ds">
        <span class="op">Description:</span>
        <p><%=book.description %></p>
      </div>
    </div>
    <%- include ('footer') %>
  </body>
</html>
