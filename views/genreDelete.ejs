<!DOCTYPE html>
<html>
  <%- include ('head') %>
  <body class="wrapper">
    <%- include ('header') %> <%- include ('nav') %>
    <div class="main">
      <h2><%= `${title}: ${genre.name}` %></h2>
      <% if (warning) {%>
      <p>
        <b><%= warning %></b>
      </p>

      <a class="btn" href="/">Back to home</a>

      <% } else { %>
      <p>
        <b> Are your sure you want to delete <%= genre.name %>? </b>
        <b>This action cannot be undone.</b>
      </p>
      <form action="" method="post">
        <div class="form-group">
          <input type="hidden" name="bookid" , value="<%= genre.id %>" />
        </div>
        <button class="btn" type="submit">Delete</button>
        <button class="btn" type="button"><a href="/">Back to home</a></button>
      </form>
      <% } %>
    </div>
    <%- include ('footer') %>
  </body>
</html>
